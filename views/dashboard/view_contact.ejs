<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>view_contact</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
    <%- include ('./header.ejs') %>

        <div class="container-fluid index">
            <div class="h1">View Contact</div>

            <div class="row">
                <div class="col-md-4">
                    <%- include ('./left.ejs') %>
                </div>
                <div class="col">

                    <% if(contdata.length>0){ %>
                        <table class="table table-bordered border-black table-sm ">
                            <thead>
                                <tr>
                                    <th>Fullname</th>
                                    <th>Email ID</th>
                                    <th>phone no.</th>
                                    <th>Email Subject</th>
                                    <th>Massage</th>
                                    <th>Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i<contdata.length; i++){%>
                                    <tr>
                                        <td><%= contdata[i].Fullname %></td>
                                        <td><%= contdata[i].A_email %></td>
                                        <td><%= contdata[i].Mobile %></td>
                                        <td><%= contdata[i].S_email %></td>
                                        <td><%= contdata[i].msg %></td>
                                       
                                        <td >
                                            <a class="edit" href="/edit_3/<%= contdata[i]._id %>" >Edit</a>
                                            <a class="delete" href="/delete_3/<%= contdata[i]._id %>" >Delete</a>
                                        </td>
                                    </tr>

                                <% }%>
                            </tbody>
                        </table>   
                        <% } else { %>
                        
                            no record found
                        <%} %>

                </div>
            </div>
        </div>

</body>

</html>