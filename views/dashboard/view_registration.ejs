<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>view_registration</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
    <%- include ('./header.ejs') %>

        <div class="container-fluid index">
            <div class="h1">View Registration</div>

            <div class="row">
                <div class="col-md-4">
                    <%- include ('./left.ejs') %>
                </div>
                <div class="col">

                    <% if(regdata.length>0){ %>
                        <table class="table table-bordered  border-black ">
                            <thead>
                                <tr>
                                    <th>firstName</th>
                                    <th>LastName</th>
                                    <th>Email ID</th>
                                    <th>password</th>
                                    <th>Phone no.</th>
                                    <th>Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i<regdata.length; i++){%>
                                    <tr>
                                        <td><%= regdata[i].firstname %></td>
                                        <td><%= regdata[i].lastname %></td>
                                        <td><%= regdata[i].email%></td>
                                        <td><%= regdata[i].password %></td>
                                        <td><%= regdata[i].mobile %></td>
                                       
                                        <td >
                                           
                                            <a class="edit" href="/edit_2/<%= regdata[i]._id %>" >Edit<ta>
                                            <a class="delete" href="/delete_2/<%= regdata[i]._id %>" >Delete</a>
                                            
                                        </td>
                                    </tr>

                                <% }%>
                            </tbody>
                        </table>   
                        <% } else { %>
                        
                            no record found
                        <%} %>

                </div>
            </div>
        </div>

</body>

</html> 

